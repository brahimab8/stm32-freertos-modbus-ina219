    },

    "response_header": {
      "description": "Node → master: 6 + N bytes + Checksum",
      "fields": [
        { "name": "sof",      "type": "uint8" },
        { "name": "board_id", "type": "uint8" },
        { "name": "addr7",    "type": "uint8" },
        { "name": "cmd",      "type": "uint8" },
